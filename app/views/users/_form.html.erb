<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  	<legend>Account info</legend>
	  <div class="field">
	    <%= f.label :username %><br />
	    <%= f.text_field :username %>
	  </div>
	  <div class="field">
	    <%= f.label :password %><br />
	    <%= f.text_field :password %>
	  </div>
	  <div class="field">
	    <%= f.label :password_confirmation, 'Confirm' %><br />
	    <%= f.text_field :password_confirmation %>
	  </div>
	  <div class="field">
	    <%= f.label :email, 'E-mail' %><br />
	    <%= f.email_field :email %>
	  </div>
  </fieldset>
  <fieldset>
  	<legend>Personal info</legend>
	  <div class="field">
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </div>
	  <div class="field">
	    <%= f.label :birthdate %><br />
	    <%= f.date_select :birthdate, :start_year => 1950, :end_year => Date.today.year %>
	  </div>
	  <div class="field">
	    <%= f.label :city %><br />
	    <%= f.text_field :city %>
	  </div>
	  <div class="field">
	    <%= f.label :country %><br />
	    <%= f.text_field :country %>
	  </div>
	  <div class="field">
	    <%= f.label :occupation %><br />
	    <%= f.text_field :occupation %>
	  </div>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
